<% include partials/header.ejs %>

<div class="ui main text container segment">
  <div class="ui huge header">Edit <%= blog.blogTitle %></div>

  <form
    class="ui form"
    action="/blogs/<%= blog._id %>?_method=PUT"
    method="POST"
  >
    <div class="field">
      <label>Blog Title</label>
      <input type="text" name="blog[blogTitle]" value="<%= blog.blogTitle%>" />
    </div>
    <div class="field">
      <label>Image</label>
      <input type="text" name="blog[image]" value="<%= blog.image %>" />
    </div>
    <div class="field">
      <label>Post</label>
      <textarea name="blog[body]" cols="30" rows="10">
<%= blog.body %></textarea
      >
    </div>
    <input type="submit" class="ui purple basic button" />
  </form>
</div>

<% include partials/footer.ejs %>
